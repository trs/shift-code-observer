{
    "compilerOptions": {
      "outDir": "dist",
      "module": "commonjs",
      "target": "es2016",
      "lib": [
        "es2019"
      ],
      "sourceMap": true,
      "strict": true,
      "moduleResolution": "node",
      "declaration": true,
      "esModuleInterop": true,
      "typeRoots": [
        "node_modules/@types/"
      ]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.spec.ts"
    ]
  }
